{
  "compilerOptions": {
    "baseUrl": ".",
    "module": "es2015",
    "target": "es5",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "outDir": "build",
    "moduleResolution": "node",
    "declaration": true,
    "stripInternal": true,
    "skipLibCheck": true,
    "paths": {
      "@angular/core": ["node_modules/@angular/core"],
      "@angular/router": ["node_modules/@angular/router"]
    },
    "lib":["es6","dom", "es2015"]
  },
  "files": [
    "./ng2-page-transition.ts",
    "./src/ng2-page-transition.component.ts"
  ],
  "angularCompilerOptions": {
    "strictMetadataEmit": true
  }
}